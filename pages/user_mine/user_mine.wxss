.container {
  padding: 30rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 用户信息区域 */
.user-info-section {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 40rpx 30rpx;
  border-radius: 15rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
  border: 2rpx solid #eee;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.nickname {
  font-size: 38rpx;
  font-weight: bold;
  color: #333;
}

.edit-profile {
  font-size: 26rpx;
  color: #888;
  margin-top: 10rpx;
}

/* 区域标题 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
  padding-left: 10rpx;
}

/* 订单网格 */
.order-grid {
  display: flex;
  justify-content: space-around;
  background-color: #fff;
  padding: 30rpx 0;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.order-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 26rpx;
  color: #666;
  width: 25%; /* 确保四个item平均分布 */
}

.order-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

/* 菜单列表 */
.menu-list {
  background-color: #fff;
  border-radius: 15rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  font-size: 30rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.menu-item:last-child {
  border-bottom: none;
}

.arrow {
  color: #ccc;
  font-size: 28rpx;
}