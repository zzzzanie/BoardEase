@import "/app.wxss"; /* 确保引入全局样式 */

.container {
  min-height: 100vh;
  background: #f8f8f8;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 0 48rpx;
}

.login-card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(255,102,0,0.08);
  padding: 72rpx 48rpx 56rpx 48rpx;
  width: 100%;
  max-width: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section-title {
  font-size: 56rpx;
  margin-bottom: 40rpx;
  color: #ff6600;
  font-weight: 700;
  letter-spacing: 2rpx;
}

.hint-text {
  font-size: 30rpx;
  color: #888;
  margin-bottom: 48rpx;
  text-align: center;
}

.login-buttons-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.login-button {
  width: 100%;
  min-width: 260rpx;
  padding: 32rpx 0;
  margin: 0 0 28rpx 0;
  border-radius: 32rpx;
  font-size: 38rpx;
  font-weight: 600;
  background: linear-gradient(90deg, #ff9800 0%, #ff9900 100%);
  color: #fff;
  border: none;
  box-shadow: 0 2rpx 8rpx rgba(255,102,0,0.08);
}

/* 可选：次要按钮样式 */
.secondary-button {
  background: #f5f5f5;
  color: #ff9800;
  border: 2rpx solid #ff9800;
  font-size: 36rpx;
  padding: 28rpx 0;
  border-radius: 32rpx;
}