/* pages/merchant/orders.wxss */

/* 容器 */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 170rpx;
}

/* 标题栏 */
.header {
  background: linear-gradient(135deg, #FFB300 0%, #FFA200 100%);
  padding: 40rpx 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

/* Tab切换栏 */
.order-tab-bar {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  padding: 30rpx 0;
  text-align: center;
  position: relative;
}

.tab-text {
  font-size: 28rpx;
  color: #666;
  transition: color 0.3s;
}

.tab-item.active .tab-text {
  color: #FFB300;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FFB300;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 0 30rpx;
}

/* 订单卡片 */
.order-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.order-card.completed {
  background: #f9f9f9;
  opacity: 0.8;
}

/* 用户信息区 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  justify-content: flex-end;
}

.user-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 15rpx;
}

.user-nickname {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
}

/* 宠物信息区 */
.pet-info {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.pet-image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
}

.pet-details {
  flex: 1;
}

.pet-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-type {
  font-size: 24rpx;
  color: #FFB300;
  background: rgba(255, 179, 0, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  display: inline-block;
}

/* 服务信息区 */
.service-info {
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  margin: 15rpx 0;
}

.service-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.service-time {
  font-size: 24rpx;
  color: #666;
  display: block;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.btn {
  min-width: 120rpx;
  height: 60rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.btn-accept {
  background: #FFB300;
  color: #fff;
}

.btn-accept:active {
  background: #e6a200;
  transform: scale(0.95);
}

.btn-reject {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-reject:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

.btn-complete {
  background: #52c41a;
  color: #fff;
}

.btn-complete:active {
  background: #389e0d;
  transform: scale(0.95);
}

.btn-detail {
  background: #f5f5f5;
  color: #666;
  border: 1rpx solid #ddd;
}

.btn-detail:active {
  background: #e8e8e8;
  transform: scale(0.95);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .order-list {
    padding: 0 20rpx;
  }
  
  .order-card {
    padding: 25rpx;
  }
  
  .action-buttons {
    gap: 15rpx;
  }
  
  .btn {
    min-width: 100rpx;
    height: 50rpx;
    font-size: 24rpx;
  }
}

/* 按钮点击效果 */
.btn:active {
  transform: scale(0.95);
}

/* 滚动条隐藏 */
::-webkit-scrollbar {
  display: none;
} 

.customized-tag {
  display: inline-block;
  margin-right: 12rpx;
  margin-left: 0;
  padding: 2rpx 10rpx;
  background: #ff9800;
  color: #fff;
  border-radius: 16rpx;
  font-size: 22rpx;
  vertical-align: middle;
} 