<view class="container">
  <view class="order-status-card card">
    <text class="status-label">订单状态：</text>
    <text class="status-text">{{order.statusText || order.status}}</text>
  </view>

  <view class="section-title">订单详情</view>
  <view class="detail-list card">
    <view class="detail-item">
      <text class="label">订单ID:</text> <text class="value">{{order._id}}</text>
    </view>
    <view class="detail-item">
      <text class="label">店铺名:</text> <text class="value">{{order.shopName}}</text>
    </view>
    <view class="detail-item">
      <text class="label">服务名:</text> <text class="value">{{order.serviceTitle}}</text>
    </view>
    <view class="detail-item">
      <text class="label">宠物名称:</text> <text class="value">{{order.petName}}</text>
    </view>
    <view class="detail-item">
      <text class="label">订单天数:</text> <text class="value">{{order.orderTime}}</text>
    </view>
    <view class="detail-item">
      <text class="label">支付方式:</text> <text class="value">{{order.payment === 'wechat' ? '微信支付' : (order.payment === 'alipay' ? '支付宝' : order.payment)}}</text>
    </view>
    <view class="detail-item">
      <text class="label">订单备注:</text> <text class="value">{{order.orderNote}}</text>
    </view>
    <view class="detail-item">
      <text class="label">开始时间:</text> <text class="value">{{order.startDateTime}}</text>
    </view>
    <view class="detail-item">
      <text class="label">结束时间:</text> <text class="value">{{order.endDateTime}}</text>
    </view>
  </view>

  <view class="order-action-footer">
    <button wx:if="{{order.status === 'processing'}}" class="action-button secondary-button" bindtap="contactSeller">联系卖家</button>
    <button wx:if="{{order.status === 'completed'}}" class="action-button secondary-button" bindtap="goToRateOrder">去评价</button>
  </view>
</view>