/* pages/seller_settings/seller_settings.wxss */
.settings-container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.settings-header {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.settings-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.settings-section {
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1);
}

.section-header {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.section-desc {
  font-size: 26rpx;
  color: #666;
}

.date-picker-section {
  margin-bottom: 30rpx;
}

.date-picker-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.date-label {
  font-size: 28rpx;
  color: #333;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.date-value {
  font-size: 28rpx;
  color: #007aff;
  padding: 10rpx 20rpx;
  background: #f0f8ff;
  border-radius: 8rpx;
  border: 1rpx solid #007aff;
}

.date-actions {
  margin-top: 20rpx;
}

.add-date-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 20rpx 40rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.add-date-btn[disabled] {
  background: #ccc;
  color: #999;
}

.unavailable-dates-list {
  margin-top: 30rpx;
}

.list-header {
  margin-bottom: 20rpx;
}

.list-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.date-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  margin-bottom: 10rpx;
}

.date-text {
  font-size: 28rpx;
  color: #333;
}

.remove-date {
  color: #ff3b30;
  font-size: 26rpx;
  padding: 10rpx 20rpx;
  background: #ffe6e6;
  border-radius: 6rpx;
}

.batch-settings {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #eee;
}

.batch-header {
  margin-bottom: 20rpx;
}

.batch-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.batch-options {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.batch-option {
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 8rpx;
  border: 1rpx solid #e9ecef;
}

.batch-option text {
  font-size: 28rpx;
  color: #333;
}

.setting-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx 0;
  border-bottom: 1rpx solid #eee;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  font-size: 28rpx;
  color: #333;
}

.save-section {
  margin-top: 40rpx;
  padding: 0 30rpx;
}

.save-btn {
  background: #007aff;
  color: white;
  border: none;
  padding: 25rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: bold;
  width: 100%;
}