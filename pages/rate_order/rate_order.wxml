<view class="container">
  <view class="rate-card card">
    <view class="order-info">
      <text class="order-label">服务名称：</text>
      <text class="order-value">{{order.serviceTitle}}</text>
    </view>
    <view class="star-section">
      <text class="star-label">评分：</text>
      <view class="star-rating">
        <block wx:for="{{[1,2,3,4,5]}}" wx:key="*this">
          <image class="star" src="{{index < rating ? 'https://636c-cloudbase-5gkjpend4a9022ba-1366660379.tcb.qcloud.la/images/star_filled.png' : 'https://636c-cloudbase-5gkjpend4a9022ba-1366660379.tcb.qcloud.la/images/star_empty.png'}}" mode="aspectFill" bindtap="onStarTap" data-index="{{index}}" />
        </block>
      </view>
      <text class="star-score">{{rating}}分</text>
    </view>
    <view class="comment-section">
      <textarea class="comment-input" placeholder="请输入您的评价（最多200字）..." value="{{comment}}" bindinput="onCommentInput" maxlength="200" />
    </view>
    <button class="submit-btn" bindtap="submitRating">提交评价</button>
  </view>
</view>