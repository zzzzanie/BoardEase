.container {
  padding: 24rpx;
  min-height: 100vh;
  background-color: #fff;
  padding-bottom: 128rpx;
}

.header {
  margin-bottom: 24rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  line-height: 1.5;
}

.loading, .empty {
  text-align: center;
  padding: 40rpx;
  color: rgba(0, 0, 0, 0.4);
  font-size: 28rpx;
}

.service-list {
  padding-top: 16rpx;
  margin-bottom: 32rpx;
}

.service-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx 0 rgba(0, 0, 0, 0.05);
  border: 1rpx solid rgba(0, 0, 0, 0.06);
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(0, 0, 0, 0.9);
  padding: 16rpx 0 24rpx 16rpx;
}

.service-status {
  font-size: 28rpx;
  padding: 16rpx 16rpx 24rpx 16rpx;
  font-weight: 500;
  display: inline-flex;
}

.service-status.published {
  color: #FFA000;
}

.service-status.unpublished {
  color: #FA8C16;
}

.service-info {
  padding-left: 16rpx;
  margin-bottom: 16rpx;
}

.service-info text {
  display: block;
  font-size: 28rpx;
  line-height: 1.5;
  color: rgba(0, 0, 0, 0.6);
  margin-bottom: 8rpx;
}

.service-tags {
  padding-left: 8rpx;
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 8rpx;
}

.tag {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.6);
  background-color: rgba(0, 0, 0, 0.04);
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.service-actions {
  display: flex;
  justify-content: flex-end;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
  padding-top: 16rpx;
  margin-top: 16rpx;
}

.action-btn {
  font-size: 28rpx;
  color: #FFA000;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  margin-left: 24rpx;
  line-height: 1.3;
}

.action-btn.delete {
  color: #FF6B6B;
}

.pagination {
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 32rpx 0;
  padding-bottom: 140rpx;
}

.page-btn {
    padding: 0 24rpx;
    height: 56rpx;
    min-width: 120rpx;
    font-size: 24rpx;
    font-weight: 500;
    line-height: 1;
    background-color: #FFA000;
    color: #fff;
    border-radius: 8rpx;
    border: none;
    margin: 0 8rpx;
    box-sizing: border-box;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s cubic-bezier(0.38, 0, 0.24, 1);
}

.page-btn.disabled {
  background-color: #F5F5F5;
  color: rgba(0, 0, 0, 0.26);
  cursor: not-allowed;
}

.page-info {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.4);
  padding: 0 16rpx;
  line-height: 56rpx;
}

.add-btn {
  position: fixed;
  right: 32rpx;
  bottom: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #FFA000;
  color: #fff;
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.full-width-button {
  width: auto; 
  margin: 30rpx; 
  margin-bottom: calc(30rpx + env(safe-area-inset-bottom)); 
}