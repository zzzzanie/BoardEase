.container {
  padding: 16px;
  background-color: #fff;
}

.order-status {
  font-size: 20px;
  text-align: center;
  margin-bottom: 15px;
}

.status-text {
  color: #ff6600;
  font-weight: bold;
}

.service-info .title,
.order-details .title {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 20px;
  border-left: 4px solid #ff6600;
  padding-left: 8px;
}

.service-item {
  display: flex;
  align-items: center;
  margin-top: 10px;
  margin-bottom: 15px;
}

.service-img {
  width: 80px;
  height: 80px;
  margin-right: 12px;
  border-radius: 4px;
}

.service-desc .service-name {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 6px;
  display: block;
}

.service-desc .service-shop {
  font-size: 14px;
  color: #999;
  margin-bottom: 4px;
  display: block;
}

.service-desc .service-price {
  font-size: 14px;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
  margin-bottom: 10px;
  font-size:18px;
}

.label {
  color: #666;
  margin-left: 2px;
  margin-right: 2px;
}

.total-price .price {
  font-size: 30px;

  font-weight: bold;
}

.customized-detail-tag {
  display: flex;
  justify-content: center;
  margin: 16rpx 0;
  padding: 16rpx 18rpx;
  background: #ff9800;
  color: #fff;
  border-radius: 20rpx;
  font-size:34rpx;
  
}
.modal-mask {
  position: fixed;
  left: 0; top: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.4);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}
.modal-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 40rpx 32rpx 24rpx 32rpx;
  min-width: 480rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.12);
  display: flex;
  flex-direction: column;
  align-items: stretch;
}
.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 32rpx;
  text-align: center;
}
.modal-input {
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
}
.modal-actions {
  display: flex;
  justify-content: space-between;
  gap: 24rpx;
}