/* 顶部大色块 */
.top-bg {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 320rpx;
  background: #ffb400;
  z-index: -1;
}

/* 顶部导航栏 */
.nav-bar {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding: 48rpx 32rpx 0 32rpx;
  position: relative;
}
.nav-back {
  width: 44rpx;
  height: 44rpx;
  margin-right: 18rpx;
  margin-top: 2rpx;
}
.nav-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
  flex: none;
}
.nav-icons {
  display: flex;
  align-items: center;
  position: absolute;
  right: 32rpx;
  top: 48rpx;
}
.nav-icon {
  width: 40rpx;
  height: 40rpx;
  margin-left: 24rpx;
  opacity: 0.8;
}

/* 主卡片 */
.main-card {
  background: #fff;
  margin: 32rpx 24rpx 0 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx #f7e6b0;
  padding: 32rpx 24rpx 24rpx 24rpx;
  position: relative;
  top: 0;
}
.location-row {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}
.region-picker {
  display: flex;
  align-items: center;
  margin-right: 12rpx;
}
.region-label {
  color: #ffb400;
  font-size: 28rpx;
  font-weight: bold;
}
.arrow-icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 4rpx;
}
.address-input {
  flex: 1;
  border: none;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  margin: 0 12rpx;
  color: #333;
  background: transparent;
}
.switch-loc {
  display: flex;
  align-items: center;
  color: #ffb400;
  font-size: 26rpx;
}
.switch-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}
.date-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.date-col {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.date-label {
  color: #888;
  font-size: 24rpx;
}
.date-value {
  color: #222;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 4rpx;
}
.date-night {
  width: 80rpx;
  text-align: center;
  color: #ffb400;
  font-size: 28rpx;
  font-weight: bold;
}

.date-tip {
  background: #f0f8ff;
  border: 1rpx solid #007aff;
  border-radius: 8rpx;
  padding: 12rpx 16rpx;
  margin-bottom: 16rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #007aff;
  line-height: 1.4;
}
.choose-pet-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
  margin-top: 8rpx;
  cursor: pointer;
}
.pet-info-container {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.pet-required {
  color: #ff4d00;
  font-size: 22rpx;
  margin-top: 4rpx;
}
.pet-avatar {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  border: 2rpx solid #ffb400;
}
.choose-pet-text {
  color: #888;
  font-size: 28rpx;
}
.budget-row {
  display: flex;
  align-items: center;
  margin: 12rpx 0;
}
.budget-label {
  font-size: 28rpx;
  color: #888;
  margin-right: 12rpx;
}
.budget-min, .budget-max {
  font-size: 24rpx;
  color: #bbb;
  margin: 0 8rpx;
  width: 40rpx;
  text-align: center;
}
.budget-slider {
  flex: 1;
  margin: 0 8rpx;
  height: 16rpx;
}
.budget-value {
  color: #ffb400;
  font-size: 28rpx;
  margin-left: 18rpx;
  font-weight: bold;
  min-width: 100rpx;
  text-align: right;
}
.foster-type-row {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
}
.foster-type-label {
  font-size: 28rpx;
  color: #888;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

.foster-type-tags {
  display: flex;
  flex-wrap: wrap;
}
.foster-type-tag {
  display: flex;
  align-items: center;
  border: 2rpx solid #ffb400;
  border-radius: 24rpx;
  padding: 8rpx 22rpx;
  margin-right: 16rpx;
  margin-bottom: 12rpx;
  font-size: 26rpx;
  color: #ffb400;
  background: #fff;
  transition: all 0.3s ease;
  position: relative;
  cursor: pointer;
}

.main-card .foster-type-row .foster-type-tags .foster-type-tag.selected {
  background: #ffb400 !important;
  color: #fff !important;
  border-color: #ffb400 !important;
  border-width: 2rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 180, 0, 0.4) !important;
  font-weight: bold !important;
}

/* 备用样式，确保选中状态生效 */
.foster-type-tag.selected {
  background: #ffb400 !important;
  color: #fff !important;
  border-color: #ffb400 !important;
  border-width: 2rpx !important;
  box-shadow: 0 4rpx 12rpx rgba(255, 180, 0, 0.4) !important;
  font-weight: bold !important;
}

/* 已选择的筛选条件样式 */
.selected-filters-row {
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-bottom: 12rpx;
  margin-top: 8rpx;
}

.selected-filters-label {
  font-size: 28rpx;
  color: #888;
  margin-right: 12rpx;
  margin-top: 8rpx;
}

.selected-filters-tags {
  display: flex;
  flex-wrap: wrap;
}

.selected-filter-tag {
  display: flex;
  align-items: center;
  background: #ffb400;
  color: #fff;
  border-radius: 20rpx;
  padding: 6rpx 16rpx;
  margin-right: 12rpx;
  margin-bottom: 8rpx;
  font-size: 24rpx;
  font-weight: bold;
}

.remove-filter {
  margin-left: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #fff;
  cursor: pointer;
}


.search-btn {
  width: 100%;
  background: #ffb400;
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  margin: 16rpx 0 12rpx 0;
  font-weight: bold;
  letter-spacing: 2rpx;
  box-shadow: 0 2rpx 8rpx #ffe066;
}
.service-tags {
  display: flex;
  justify-content: space-between;
  margin-top: 8rpx;
}
.service-tag {
  display: flex;
  align-items: center;
  background: #fff7e6;
  border-radius: 12rpx;
  padding: 8rpx 18rpx;
  font-size: 24rpx;
  color: #ffb400;
}
.tag-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

/* 商家列表 */
.merchant-list {
  margin: 24rpx;
  margin-top: 32rpx;
  padding-bottom: 40rpx;
}
.merchant-card {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx #f7e6b0;
  transition: box-shadow 0.2s;
  cursor: pointer;
}
.merchant-card.disabled {
  opacity: 0.6;
  cursor: not-allowed;
  position: relative;
}
.merchant-card.disabled::after {
  content: "请先选择寄养宝贝";
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  z-index: 10;
  pointer-events: none;
}
.merchant-img {
  width: 140rpx;
  height: 110rpx;
  border-radius: 12rpx;
  margin: 18rpx 0 18rpx 18rpx;
  object-fit: cover;
  background: #f7e6b0;
}
.merchant-info {
  flex: 1;
  padding: 18rpx 18rpx 18rpx 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.merchant-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 6rpx;
}
.merchant-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #222;
  margin-right: 12rpx;
}
.badge {
  display: flex;
  align-items: center;
  background: #fff7e6;
  border-radius: 8rpx;
  padding: 2rpx 10rpx;
  font-size: 22rpx;
  color: #ffb400;
}
.badge-icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 4rpx;
}
.merchant-desc-row {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #888;
  margin-bottom: 4rpx;
}
.pet-types {
  margin-right: 16rpx;
}
.foster-type {
  margin-right: 16rpx;
}
.max-pet {
  color: #ffb400;
}
.merchant-feature-row {
  display: flex;
  align-items: center;
  margin-bottom: 4rpx;
}
.feature {
  display: flex;
  align-items: center;
  background: #fff7e6;
  border-radius: 8rpx;
  padding: 2rpx 12rpx;
  font-size: 22rpx;
  color: #ffb400;
  margin-right: 12rpx;
}
.feature-icon {
  width: 22rpx;
  height: 22rpx;
  margin-right: 4rpx;
}
.merchant-desc {
  color: #888;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}
.merchant-price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.merchant-price {
  color: #ff4d00;
  font-size: 28rpx;
  font-weight: bold;
}
.merchant-score {
  color: #ffb400;
  font-size: 26rpx;
  margin-left: 18rpx;
  margin-right: 8rpx;
}
.merchant-distance {
  color: #888;
  font-size: 24rpx;
}

.pet-picker-mask {
  position: fixed;
  left: 0; top: 0; width: 100vw; height: 100vh;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}
.pet-picker-content {
  background: #fff;
  border-radius: 18rpx;
  width: 86vw;
  max-width: 650rpx;
  max-height: 80vh;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.18);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}
.pet-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx 18rpx 32rpx;
  border-bottom: 1rpx solid #eee;
}
.pet-picker-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.pet-picker-close {
  font-size: 40rpx;
  color: #bbb;
  font-weight: bold;
  cursor: pointer;
}
.pet-picker-list {
  flex: 1;
  min-height: 200rpx;
  max-height: 56vh;
  padding: 18rpx 0 32rpx 0;
  overflow-y: auto;
}
.pet-item {
  display: flex;
  align-items: center;
  padding: 18rpx 32rpx;
  border-bottom: 1rpx solid #f2f2f2;
  cursor: pointer;
  background: #fff;
  transition: background 0.2s, box-shadow 0.2s;
}
.pet-item:last-child {
  border-bottom: none;
}
.pet-item.selected,
.pet-item:active {
  background: #f8f9fa;
}
.pet-item-avatar {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  margin-right: 18rpx;
  border: 2rpx solid #ffb400;
  flex-shrink: 0;
}
.pet-item-info-wrap {
  flex: 1;
  min-width: 0;
  display: flex;
  align-items: center;
}
.pet-item-info {
  display: flex;
  flex-direction: column;
  min-width: 0;
}
.pet-item-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 260rpx;
}
.pet-item-desc {
  font-size: 24rpx;
  color: #888;
  margin-top: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 260rpx;
}
.pet-item-check {
  margin-left: 12rpx;
}
.check-icon {
  width: 32rpx;
  height: 32rpx;
}
.pet-info {
  margin-left: 16rpx;
  color: #888;
  font-size: 24rpx;
}

/* 保险弹窗样式 */
.insurance-content {
  padding: 20rpx 32rpx 32rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}
.insurance-img {
  width: 100%;
  border-radius: 8rpx;
}

/* 选中高亮 */
.pet-item[selected], .pet-item.selected {
  background: #fffbe6;
  box-shadow: 0 2rpx 8rpx #ffe066;
  border-left: 6rpx solid #ffb400;
}