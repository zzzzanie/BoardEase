@import "/app.wxss";

.form-section {
  padding: 0 30rpx;
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 200rpx;
  font-size: 30rpx;
  color: var(--text-color-dark);
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color-dark);
  margin-left: 20rpx;
}

.picker {
  line-height: 1.5; /* 适配picker的高度 */
}

.textarea-item {
  flex-direction: column;
  align-items: flex-start;
  padding-bottom: 20rpx;
}

.textarea-item .label {
  margin-bottom: 15rpx;
}

.textarea {
  width: 100%;
  height: 400rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: var(--text-color-dark);
}

.upload-cover {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
  margin-left: auto;
  border: 1rpx dashed var(--border-color);
  display: flex;
  justify-content: center;
  align-items: center;
}

.media-upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx; /* 图片之间间距 */
  width: 100%;
  padding-top: 10rpx;
}

.uploaded-media-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.media-preview {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
}

.delete-media {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  z-index: 10;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed var(--border-color);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.5;
}

.hint-text {
  width: 100%;
  margin-top: 15rpx;
  font-size: 26rpx;
  color: var(--text-color-light);
}

.primary-button {
  margin-top: 50rpx;
}

.required::after {
  content: '*';
  color: red;
  font-size: 30rpx;
  margin-left: 4rpx;
}

/* 底部全宽度按钮的样式，与 action-button-yellow 配合 */
.full-width-button {
  width: auto; 
  margin: 30rpx;
  background-color: #FFA000;
  color: #fff;
}