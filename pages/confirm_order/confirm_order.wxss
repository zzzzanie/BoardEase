}
.coupon-modal-body {
  flex: 1;
  padding: 20rpx 32rpx 32rpx 32rpx;
  max-height: 60vh;
  overflow-y: auto;
}
.coupon-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  cursor: pointer;
  transition: border-color 0.2s;
}
.coupon-option:hover {
  border-color: #ffb400;
}
.coupon-info {
  flex: 1;
}
.coupon-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}
.coupon-desc {
  font-size: 24rpx;
  color: #666;
}
.coupon-discount {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
  background: #ffe6e6;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.remark-section {}
textarea { width: 100%; min-height: 80rpx; border: 1rpx solid #eee; border-radius: 16rpx; padding: 12rpx; font-size: 28rpx; background: #fafafa; }

.fee-card { margin-bottom: 0; }
.fee-title { font-size: 30rpx; color: #ffb400; font-weight: bold; margin-bottom: 18rpx; }
.fee-section {}
.fee-item { font-size: 28rpx; margin-bottom: 14rpx; display: flex; justify-content: space-between; }
.fee-tip { color: #bbb; font-size: 24rpx; margin-left: 8rpx; }
.fee-total { font-size: 32rpx; color: #ff4d00; font-weight: bold; margin-top: 24rpx; display: flex; justify-content: space-between; }

.bottom-btn { position: fixed; bottom: 0; left: 0; width: 100%; background: #fff; padding: 24rpx; z-index: 100; box-shadow: 0 -2rpx 12rpx #ffe066; }
button { width: 100%; background: #ffb400; color: #fff; font-size: 32rpx; border-radius: 16rpx; }

.reward-card {
  background: #fff;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx #f7e6b0;
  padding: 32rpx 24rpx 24rpx 24rpx;
}
.reward-section {}
.reward-title { font-size: 28rpx; font-weight: bold; margin-bottom: 8rpx; }
.reward-input {
  width: 100%;
  border: 1rpx solid #eee;
  border-radius: 12rpx;
  padding: 8rpx 16rpx;
  font-size: 28rpx;
  margin-top: 8rpx;
  background: #fafafa;
  box-sizing: border-box;
}
.reward-tip { color: #888; font-size: 22rpx; margin-top: 6rpx; }