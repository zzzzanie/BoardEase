.merchant-header { background: #fff; padding: 24rpx; border-radius: 16rpx; margin: 24rpx; }
.merchant-banner { width: 200rpx; height: 200rpx; border-radius: 12rpx; object-fit: cover; margin: 0 auto; display: block; }
.merchant-title-row { display: flex; align-items: center; margin-top: 16rpx; }
.merchant-title { font-size: 36rpx; font-weight: bold; }
.merchant-badges { display: flex; align-items: center; margin-top: 8rpx; }
.badge { font-size: 22rpx; border-radius: 8rpx; padding: 2rpx 10rpx; margin-right: 12rpx; }
.badge-verify { background: #e6f7ff; color: #1890ff; }
.badge-insure { background: #fff7e6; color: #ffb400; }
.score { color: #ffb400; font-size: 32rpx; margin-left: 12rpx; }
.merchant-address { color: #888; font-size: 26rpx; margin-top: 8rpx; }

.merchant-note { background: #fff7e6; margin: 24rpx; border-radius: 16rpx; padding: 24rpx; }
.note-title { font-size: 30rpx; font-weight: bold; color: #ffb400; margin-bottom: 8rpx; }
.note-content { color: #333; font-size: 28rpx; margin-bottom: 8rpx; }
.note-pet-types { color: #888; font-size: 26rpx; margin-bottom: 8rpx; }
.note-filters { color: #888; font-size: 24rpx; }
.note-filter { background: #ffecb3; color: #ffb400; border-radius: 8rpx; padding: 4rpx 12rpx; margin-right: 8rpx; }

.service-section { background: #fff; margin: 24rpx; border-radius: 16rpx; padding: 24rpx; }
.service-title { font-size: 32rpx; font-weight: bold; margin-bottom: 16rpx; }
.service-list { display: flex; flex-direction: column; }
.service-item {
  margin-bottom: 16rpx;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 18rpx 16rpx;
  position: relative;
  background: #fafafa;
  transition: border-color 0.2s, background 0.2s;
}
.service-item.selected {
  border-color: #ffb400;
  background: #fffbe6;
  box-shadow: 0 2rpx 8rpx #ffe066;
}
.service-name { font-size: 28rpx; }
.service-price { color: #ff4d00; font-size: 28rpx; }
.service-desc { color: #888; font-size: 24rpx; }
.service-checked {
  position: absolute;
  right: 18rpx;
  top: 18rpx;
  width: 32rpx;
  height: 32rpx;
}

.unavailable-section { background: #fff7e6; margin: 24rpx; border-radius: 16rpx; padding: 24rpx; }
.unavailable-title { font-size: 28rpx; font-weight: bold; }
.unavailable-desc { color: #ff4d00; font-size: 24rpx; }

.unavailable-dates-section { background: #fff; margin: 24rpx; border-radius: 16rpx; padding: 24rpx; }
.unavailable-dates-title { font-size: 28rpx; font-weight: bold; color: #ff4d00; margin-bottom: 12rpx; }
.unavailable-dates-list { display: flex; flex-wrap: wrap; gap: 8rpx; }
.unavailable-date { 
  background: #ffe6e6; 
  color: #ff4d00; 
  font-size: 22rpx; 
  padding: 6rpx 12rpx; 
  border-radius: 6rpx; 
  border: 1rpx solid #ffcccc;
}

.env-title { margin: 24rpx 24rpx 0 24rpx; font-size: 28rpx; color: #ffb400; font-weight: bold; }
.env-section { margin: 12rpx 24rpx 24rpx 24rpx; display: flex; }
.env-img { width: 200rpx; height: 140rpx; border-radius: 12rpx; margin-right: 16rpx; object-fit: cover; }

.review-section { margin: 24rpx; color: #ffb400; font-size: 28rpx; text-align: right; cursor: pointer; }
.review-list { margin: 0 24rpx 24rpx 24rpx; }
.review-item { background: #f8f8f8; border-radius: 12rpx; padding: 16rpx; margin-bottom: 12rpx; }
.review-header { display: flex; align-items: center; margin-bottom: 6rpx; }
.review-user { font-weight: bold; color: #333; margin-right: 16rpx; }
.review-score { color: #ffb400; }

.bottom-btn { position: fixed; bottom: 0; left: 0; width: 100%; background: #fff; padding: 24rpx; z-index: 100; }
button { width: 100%; background: #ffb400; color: #fff; font-size: 32rpx; border-radius: 12rpx; }

.modal-mask {
  position: fixed; left: 0; top: 0; width: 100vw; height: 100vh;
  background: rgba(0,0,0,0.3); z-index: 999;
  display: flex; align-items: center; justify-content: center;
}
.modal-content {
  background: #fff; border-radius: 16rpx; padding: 32rpx 24rpx 24rpx 24rpx;
  min-width: 500rpx; max-width: 90vw;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}
.modal-title { font-size: 32rpx; font-weight: bold; margin-bottom: 18rpx; color: #ffb400; }
.close-btn { margin-top: 18rpx; background: #ffb400; color: #fff; }

/* 实时监控区块 */
.monitor-section {
  background: #fff7e6;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
}
.monitor-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffb400;
  margin-bottom: 12rpx;
}
.monitor-video {
  width: 100%;
  height: 320rpx;
  border-radius: 12rpx;
  background: #000;
}

/* 资格展示区块 */
.cert-section {
  background: #fff;
  margin: 24rpx;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 0;
}
.cert-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #ffb400;
  margin-bottom: 12rpx;
}
.cert-list {
  display: flex;
  flex-direction: row;
  gap: 24rpx;
}
.cert-img {
  width: 180rpx;
  height: 120rpx;
  border-radius: 10rpx;
  object-fit: cover;
  border: 2rpx solid #ffe066;
  background: #fafafa;
}

/* 保险弹窗样式 */
.insurance-modal {
  max-width: 80vw;
  max-height: 80vh;
  overflow-y: auto;
}
.insurance-img {
  width: 100%;
  border-radius: 8rpx;
  margin: 20rpx 0;
}