/* pages/seller_mine_detail/seller_mine_detail.wxss */
@import "/app.wxss";

.form-section {
  padding: 0 30rpx; /* 表单卡片内部的左右内边距 */
  margin-top: 20rpx;
}

.form-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid var(--border-color);
}

.form-item:last-child {
  border-bottom: none;
}

.label {
  width: 180rpx;
  font-size: 30rpx;
  color: var(--text-color-dark);
  flex-shrink: 0;
}

.input {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-color-dark);
  margin-left: 20rpx;
}

.textarea-item {
  flex-direction: column;
  align-items: flex-start;
  padding-bottom: 20rpx;
}

.textarea-item .label {
  margin-bottom: 15rpx;
}

.textarea {
  width: 100%;
  height: 150rpx;
  border: 1rpx solid var(--border-color);
  border-radius: 10rpx;
  padding: 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: var(--text-color-dark);
}

/* 上传区域通用样式 */
.upload-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-left: auto;
  border: 1rpx dashed var(--border-color);
  display: flex;
  justify-content: center;
  align-items: center;
}

.shop-logo-upload {
  border-radius: 10rpx; 
}

.media-upload-area {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx; 
  width: 100%;
  padding-top: 10rpx;
}

.uploaded-media-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.media-preview {
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
  border: 1rpx solid #eee;
}

.delete-media {
  position: absolute;
  top: -15rpx;
  right: -15rpx;
  background-color: red;
  color: #fff;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 40rpx;
  z-index: 10;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  border: 1rpx dashed var(--border-color);
  border-radius: 10rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.add-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.5;
}

.arrow {
  color: var(--text-color-light);
  margin-left: 20rpx;
}

.location-icon {
    width: 40rpx;
    height: 40rpx;
    margin-left: 20rpx;
    flex-shrink: 0;
}

.primary-button {
  margin-top: 50rpx;
  margin-bottom: 50rpx; 
}

/* .menu-list, .menu-item 等通用菜单样式已经在 app.wxss 中 */