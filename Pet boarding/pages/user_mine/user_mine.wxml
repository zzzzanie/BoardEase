<view class="container">
  <view class="user-info-section">
    <image class="avatar" src="{{userInfo.avatarUrl || '/images/default_avatar.png'}}" mode="aspectFill"></image>
    <view class="info-right">
      <text class="nickname">{{userInfo.nickName || '微信用户'}}</text>
      <text class="edit-profile" bindtap="goToEditProfile">编辑资料 ></text>
    </view>
  </view>

  <view class="section-title">我的订单</view>
  <view class="order-grid">
    <view class="order-item" bindtap="goToOrders" data-type="all">
      <image src="/images/order_all.png" class="order-icon"></image>
      <text>全部订单</text>
    </view>
    <view class="order-item" bindtap="goToOrders" data-type="pending">
      <image src="/images/order_pending.png" class="order-icon"></image>
      <text>待确认</text>
    </view>
    <view class="order-item" bindtap="goToOrders" data-type="active">
      <image src="/images/order_active.png" class="order-icon"></image>
      <text>进行中</text>
    </view>
    <view class="order-item" bindtap="goToOrders" data-type="completed">
      <image src="/images/order_completed.png" class="order-icon"></image>
      <text>已完成</text>
    </view>
  </view>

  <view class="section-title">我的宠物</view>
  <view class="menu-list">
    <view class="menu-item" bindtap="goToMyPets">
      <text>管理我的宠物</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToAddPet">
      <text>添加新宠物</text>
      <text class="arrow">></text>
    </view>
  </view>

  <view class="section-title">更多服务</view>
  <view class="menu-list">
    <view class="menu-item" bindtap="goToFavorites">
      <text>我的收藏</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToSettings">
      <text>设置</text>
      <text class="arrow">></text>
    </view>
    <view class="menu-item" bindtap="goToHelp">
      <text>帮助与反馈</text>
      <text class="arrow">></text>
    </view>
  </view>
</view>